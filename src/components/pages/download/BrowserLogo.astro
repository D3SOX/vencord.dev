---
export interface Props {
    browser: string;
}

const { browser } = Astro.props as Props;
---

<img
    class="browser-logo"
    src={`/assets/browser-logos/${browser}.svg`}
    title={browser
        .split("-")
        .map(w => w[0].toUpperCase() + w.slice(1))
        .join(" ")}
/>

<style>
    img {
        width: 2em;
    }
</style>
